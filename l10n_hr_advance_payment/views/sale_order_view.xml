<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_add_advances_button" model="ir.ui.view">
            <field name="name">view_order_form_add_advances_button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_advance_payment_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('advance_payment_count', '=', 0)]}">
                            <field name="advance_payment_count" widget="statinfo" string="Advance Payments"/>
                        </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>