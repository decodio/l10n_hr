<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_currency_rate_type_tree" model="ir.ui.view">
        <field name="name">res.currency.rate.type.tree</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable" />  <!-- make tree non-editable -->
            </xpath>
            <field name="rate" position="after">
                <field name="rate_inverse"/>
<!--                <field name="rate_type"/>-->
<!--                <field name="provider_id"/>-->
            </field>
        </field>
    </record>
    <record id="view_currency_rate_type_form" model="ir.ui.view">
        <field name="name">res.currency.rate.type.form</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="currency_rate_update.view_currency_rate_form"/> <!--ref="base.view_currency_rate_form"-->
        <field name="arch" type="xml">
            <field name="provider_id" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
            <field name="rate" position="after">
                <field name="rate_inverse"/>
<!--                <field name="rate_type"/>-->
<!--                <field name="provider_id"/>-->
            </field>
        </field>
    </record>
    <record id="view_currency_rate_search_ext" model="ir.ui.view">
        <field name="name">res.currency.rate.search.extended</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
                <group expand="0" string="Group By">
<!--                    <filter string="Rate type" name="rate_type"-->
<!--                            context="{'group_by': 'rate_type'}"/>-->
                    <filter string="Provider" name="provider_id"
                            context="{'group_by': 'provider_id'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'name'}"/>
                </group>
            </field>
        </field>
    </record>
    <record id="view_currency_rate_pivot" model="ir.ui.view">
        <field name="name">res.currency.rate.pivot</field>
        <field name="model">res.currency.rate</field>
        <field name="arch" type="xml">
            <pivot string="Rates">
                <field name="name" type="row"/>
                <field name="currency_id" type="col"/>
                <field name="rate_inverse" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_currency_rate_graph" model="ir.ui.view">
        <field name="name">res.currency.rate.graph</field>
        <field name="model">res.currency.rate</field>
        <field name="arch" type="xml">
            <graph string="Currency Rates">
                <field name="currency_id" type="row"/>
                <field name="provider_id" type="row"/>
                <field name="name" type="col"/>
                <field name="rate_inverse" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="view_currency_tree_inverted" model="ir.ui.view">
        <field name="name">view_currency_tree_rate_inverted</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_tree"/>
        <field name="arch" type="xml">
            <field name="rate" position="after">
                <field name="rate_inverse"/>
            </field>
        </field>
    </record>
    <record id="view_currency_form_inverted" model="ir.ui.view">
        <field name="name">view_currency_form_rate_inverted</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <field name="rate" position="after">
                <field name="rate_inverse"/>
            </field>
        </field>
    </record>
    
    <record id="action_currency_rate_all_report" model="ir.actions.act_window">
            <field name="name">Currency Rates</field>
            <field name="res_model">res.currency.rate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="base.view_currency_rate_search"/>
<!--            <field name="context">{'active_test': False}</field>-->
    </record>
    <menuitem id="menu_currency_rates_report"
              name="Currency rates"
              action="action_currency_rate_all_report"
              parent="account.account_reports_management_menu"/>
    
</odoo>
