<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_account_invoice_fiscal_form" model="ir.ui.view">
        <field name="name">view_account_invoice_fiscal_form</field>
        <field name="model">account.invoice</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_hr_account_oca.account_invoice_l10n_hr_form"/>
        <field name="arch" type="xml">
            <field name="croatia" position="after">
                <field name="fiscalisation_active" invisible="1"/>
                <group colspan="4" col="4"
                       attrs="{'invisible':[('fiscalisation_active','=',False)]}">
                    <field name="zki"/>
                    <field name="jir" />
                    <field name="vrijeme_xml"/>
                    <field name="paragon_br_rac"/>
                    <button string="Fiskaliziraj"
                            name="button_fiskaliziraj"
                            states="open,paid"
                            type="object"
                            attrs="{'invisible':[('jir','!=',False)]}"
                            groups="base.group_user"
                            class="oe_highlight"/>
                    <button string="Check ZKI"
                            type="object" name="button_check_zki" class="btn-secondary" icon="fa-check-circle" />
                    <notebook colspan="4">
                        <page string="Log">
                             <field name="fiskal_log_ids" create="0" delete="0"/>
                        </page>
                        <page string="Related fiscal documents">
                            <field name="prateci_doc_ids" create="0" delete="0"/>
                        </page>
                    </notebook>
                </group>
            </field>
        </field>
    </record>
    
</odoo>
