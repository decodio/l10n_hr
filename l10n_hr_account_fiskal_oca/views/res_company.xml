<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- cert-->
    <record id="view_company_form_l10n_hr_account_fiskal" model="ir.ui.view">
        <field name="name">view_company_form_l10n_hr_account_fiskal</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="l10n_hr_account_oca.view_company_form_l10n_hr_account"/>
        <field name="arch" type="xml">
            <field name="fiskal_separator" position="after">
                <field name="fiskal_cert_id" />
                <field name="fiskal_spec" attrs="{'required':[('croatia','=',True)]}"/>
                <field name="fiskal_schema"/>
                <button string="Test Fiscalisation connection"
                        type="object" name="button_test_echo"
                        attrs="{'invisible':[('fiskal_cert_id','=',False)]}"
                />
            </field>
        </field>
    </record>
    <!-- Fiskal Prostor -->
    <record id="view_fiskal_prostor_form_inherit" model="ir.ui.view">
        <field name="name">view_fiskal_prostor_form_inherit</field>
        <field name="model">fiskal.prostor</field>
        <field name="inherit_id" ref="l10n_hr_account_oca.view_fiskal_prostor_form"/>
        <field name="arch" type="xml">
           
                
                <notebook position="inside">
<!--						<page string="Adresa">-->
<!--							<notebook>-->
<!--								<page string="Fizička adresa prostora" >-->
<!--									<group colspan="4" col="4">-->
<!--										<field name="ulica" />-->
<!--										<field name="kbr" />-->
<!--										<field name="kbr_dodatak"/>-->
<!--										<field name="posta" />-->
<!--										<field name="naselje" />-->
