<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_zastitni_kod" model="ir.ui.view">
            <field name="name">wizard_zastitni_kod</field>
            <field name="model">fiskal.zastitni.kod</field>
            <field name="arch" type="xml">
                <form string="ZKI">
                    <group colspan="4" col="4">
                        <field name="company_id"/>
                        <field name="cert_id"/>
                    </group>
                    <group colspan="4" col="4">
                        <field name="oib"/>
                        <field name="datum_vrijeme"/>
                        <field name="fiskalni_broj_racuna"/>
                        <field name="ukupan_iznos"/>
                    </group>
                    <group colspan="4" col="6">
                        <field name="br_racuna"/>
                        <field name="oznaka_pp"/>
                        <field name="oznaka_nu"/>
                    </group>
                    <group>
                        <field name="zki_check"/>
                    </group>
                    <button string="Generate ZKI" type="object"
                            name="button_generate_zki"/>
                    <field name="zki"/>
                    
                </form>
            </field>
        </record>
    </data>
    <act_window id="action_fiskal_generate_zki_wizard"
            name="Generate/Check ZKI"
            res_model="fiskal.zastitni.kod"
            view_mode="form"
            view_type="form"
            target="new"
            />
</odoo>
