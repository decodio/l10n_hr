<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- config line config -->
    <record id="view_l10n_hr_config_pdv_line_config_tree" model="ir.ui.view">
        <field name="name">view_l10n_hr_config_pdv_line_config_tree</field>
        <field name="model">l10n.hr.config.report.pdv.line.config</field>
        <field name="arch" type="xml">
            <tree string="Postavke stavke obrasca" editable="bottom">
                <field name="line_id" invisible="1"/>
                <field name="name" />
                <field name="position"/>
                <field name="coeficient"/>
                <field name="tax_id" />
                <field name="account_id"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_config_pdv_obrazac_line_tree" model="ir.ui.view">
        <field name="name">view_l10n_hr_config_pdv_obrazac_line_tree</field>
        <field name="model">l10n.hr.config.report.pdv.line</field>
        <field name="arch" type="xml">
            <tree string="Stavka PDV obrasca" default_order="sequence">
                <field name="sequence"/>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_config_pdv_obrazac_line_form" model="ir.ui.view">
        <field name="name">view_l10n_hr_config_pdv_obrazac_line_form</field>
        <field name="model">l10n.hr.config.report.pdv.line</field>
        <field name="arch" type="xml">
            <form string="Stavka PDV obrasca">
                <group col="4">
                    <field name="name" string="Stavka"/>
                    <field name="sequence" string="Redoslijed"/>
                    <field name="code" string="XML Šifra"/>
                    <field name="xml_vals" string="Pozicije"/>
                    <field name="parent_id" string="Nadređena stavka"/>
                    <!--<field name="sign"/>-->
                    <field name="parent_coef"/>
                </group>
                <notebook>
                    <page string="Postavke" attrs="{'invisible': [('child_ids', '!=', [])]}">
                        <field name="config_ids" nolabel="1"/>
                    </page>
<!--                    <page string="Formula">-->
<!--                        <field name="formula" nolabel="1"/>-->
<!--                    </page>-->
                    <page string="Podređene stavke" >
                        <field name="child_ids" nolabel="1" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="view_l10n_hr_config_pdv_obrazac_tree" model="ir.ui.view">
        <field name="name">view_l10n_hr_config_pdv_obrazac_tree</field>
        <field name="model">l10n.hr.config.report.pdv</field>
        <field name="arch" type="xml">
            <tree string="PDV obrazac - postavke">
                <!--<field name="company_id" invisible="1"/>-->
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_config_pdv_obrazac_form" model="ir.ui.view">
        <field name="name">view_l10n_hr_config_pdv_obrazac_form</field>
        <field name="model">l10n.hr.config.report.pdv</field>
        <field name="arch" type="xml">
            <form string="PDV obrazac - postavke">
                <header>

                    <button string="Confirm" name="button_confirm" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Cancel" name="button_cancel" type="object"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <button string="Set draft" name="button_confirm" type="object"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>

                </header>
                <!--<field name="company_id" invisible="1"/>-->
                <sheet>
                    <group colspan="4" col="4">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="define"/>
                        <field name="name_construct"/>
                        <field name="xml_schema"/>
                    </group>
                    <field name="line_ids" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_l10n_hr_config_pdv_obrazac" model="ir.actions.act_window">
        <field name="name">PDV Obrasci</field>
        <field name="res_model">l10n.hr.config.report.pdv</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>
    <menuitem id="menu_l10n_hr_config_pdv_obrazac"
              parent="l10n_hr_account_oca.menu_finance_config_croatia"
              action="action_l10n_hr_config_pdv_obrazac"
              sequence="10"
    />
</odoo>
