<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- PPO lines -->
    <record id="view_l10n_hr_pdv_report_ppo_tree" model="ir.ui.view">
        <field name="name">view_l10n_hr_pdv_report_ppo_tree</field>
        <field name="model">l10n.hr.pdv.report.ppo</field>
        <field name="arch" type="xml">
            <tree string="PPO" default_order="sequence"
                  edit="bottom" ><!--options="{'no_create': True}"-->
                <field name="report_id" invisible="1"/>
                <field name="mjesec_tro"/>
                <field name="sequence" />
                <field name="partner_id" readonly="1"/>
                <field name="partner_vat" readonly="1"/>
                <field name="amount"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_pdv_report_ppo_form" model="ir.ui.view">
        <field name="name">view_l10n_hr_pdv_report_ppo_form</field>
        <field name="model">l10n.hr.pdv.report.ppo</field>
        <field name="arch" type="xml">
           
            <form string="PPO" ><!--options="{'no_create': True}"-->
                 <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="report_id" invisible="1"/>
                    <group>
                        <field name="mjesec_tro"/>
                        <field name="sequence" />
                        <field name="partner_id" readonly="1"/>
                        <field name="partner_vat" readonly="1"/>
                        <field name="amount"/>
                    </group>
                    <notebook>
                        <page string="Move lines">
                            <field name="move_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PDV LINES -->
    <record id="view_l10n_hr_pdv_report_pdv_tree" model="ir.ui.view">
        <field name="name">view_l10n_hr_pdv_report_pdv_tree</field>
        <field name="model">l10n.hr.pdv.report.pdv</field>
        <field name="arch" type="xml">
            <tree string="PDV" default_order="sequence"
                  edit="bottom" ><!--options="{'no_create': True}"-->
                <field name="report_id" invisible="1"/>
                <field name="stavka_id" invisible="1"/>
                <field name="sequence" invisible="1"/>
                <field name="state" invisible="1"/>
                <field name="code" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="amount_base"/>
                <field name="amount_tax"/>
<!--                    <button type="object" name="view_pdv_line_moves" icon="fa-archive"/>-->
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_pdv_obrazac_pdv_form" model="ir.ui.view">
        <field name="name">view_l10n_hr_pdv_obrazac_pdv_form</field>
        <field name="model">l10n.hr.pdv.report.pdv</field>
        <field name="arch" type="xml">
            
            <form string="PDV" >
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                <group col="4">
                    <field name="report_id" invisible="1"/>
                    <field name="sequence" invisible="1"/>
                    <field name="code" readonly="1" label="XML pozicija"/>
                    <field name="name" readonly="1" />
                    <field name="amount_base"/>
                    <field name="amount_tax"/>
                </group>
                <field name="move_line_ids" nolabel="1"
                           options="{'no_create': True}"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PDV-S LINES -->
    <record id="view_l10n_hr_pdv_obrazac_pdvs_tree" model="ir.ui.view">
        <field name="view_l10n_hr_pdv_obrazac_pdvs_tree"/>
        <field name="model">l10n.hr.pdv.report.pdvs</field>
        <field name="arch" type="xml">
            <tree string="PDV-S lines" edit="bottom"
                   ><!--options="{'no_create': True}"-->
                <field name="sequence"/>
                <field name="partner_vat"/>
                <field name="partner_id"/>
                <field name="dobra"/>
                <field name="usluge"/>
                <field name="state" invisible="1"/>
<!--                    <button type="object" name="view_pdvs_line_moves" icon="fa-archive"/>-->
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_pdv_obrazac_pdvs_form" model="ir.ui.view">
        <field name="view_l10n_hr_pdv_obrazac_pdvs_form"/>
        <field name="model">l10n.hr.pdv.report.pdvs</field>
        <field name="arch" type="xml">
           
            <form string="PDV-S line" >
                 <header>
                <field name="state" widget="statusbar"/>
            </header>
                <sheet>
                <group col="4">
                    <field name="sequence" readonly="1"/>
                    <newline/>
                    <field name="partner_id" readonly="1"/>
                    <field name="partner_vat" readonly="1"/>
                    <field name="dobra"/>
                    <field name="usluge"/>
                </group>
                <field name="move_line_ids" nolabel="1"
                           options="{'no_create': True}"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ZP LINES -->
    <record id="view_l10n_hr_pdv_obrazac_pdvzp_tree" model="ir.ui.view">
        <field name="view_l10n_hr_pdv_obrazac_pdvzp_tree"/>
        <field name="model">l10n.hr.pdv.report.zp</field>
        <field name="arch" type="xml">
            <tree string="ZP lines" editable="bottom"
                   ><!--options="{'no_create': True}"-->
                <field name="sequence"/>
                <field name="partner_vat"/>
                <field name="partner_id"/>
                <field name="dobra"/>
                <field name="dobra_4263"/>
                <field name="dobra_tro"/>
                <field name="usluge"/>
                <field name="state" invisible="1"/>
<!--                    <button type="object" name="view_pdvs_line_moves" icon="fa-archive"/>-->
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_pdv_obrazac_pdvzp_form" model="ir.ui.view">
        <field name="view_l10n_hr_pdv_obrazac_pdvzp_form"/>
        <field name="model">l10n.hr.pdv.report.zp</field>
        <field name="arch" type="xml">
            
            <form string="ZP line" >
                <header>
                <field name="state" widget="statusbar"/>
            </header>
                <sheet>
                <group col="4">
                    <field name="sequence" readonly="1"/>
                    <newline/>
                    <field name="partner_id" readonly="1"/>
                    <field name="partner_vat" readonly="1"/>
                    <field name="dobra"/>
                    <field name="usluge"/>
                    <field name="dobra_4263"/>
                    <field name="dobra_tro"/>
                </group>
                <field name="move_line_ids" nolabel="1"
                           options="{'no_create': True}"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_l10n_hr_vat_tree" model="ir.ui.view">
        <field name="name">l10n.hr.pdv.tree</field>
        <field name="model">l10n.hr.pdv.obrazac</field>
        <field name="arch" type="xml">
            <tree string="Croatia VAT reports">
                <field name="company_id" invisible="1"/>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_hr_vat_form" model="ir.ui.view">
        <field name="name">l10n.hr.pdv.form</field>
        <field name="model">l10n.hr.pdv.obrazac</field>
        <field name="arch" type="xml">
            <form string="Croatia VAT report">
                <header>
                    <button string="Get data" name="button_get_data" type="object" />
                    <button string="Create XML file" name="button_create_xml" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                    <div class="h2">
                        <field name="name"/>
                    </div>
                    <group colspan="4" col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
<!--                            <field name="xml_version" attrs="{'invisible':[('xml_version','=',False)]}"/>-->
                    </group>
                    <notebook>
<!--                            <page string="Details">-->
<!--                                <group>-->
<!--                                    <field name="responsible"/>-->
<!--                                    <field name="first_name"/>-->
<!--                                    <field name="last_name"/>-->
<!--                                    <field name="email"/>-->
<!--                                    <field name="phone"/>-->
<!--                                </group>-->
<!--                            </page>-->
                        <page string="PDV">
                            <field name="pdv_xml_file_name" invisible="1"/>
                            <field name="pdv_xml_file" filename="pdv_xml_file_name"
                                    class="oe_right"/>
                            <field name="pdv_line_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="PDV-S" ><!--attrs="{'invisible':[('pdvs_line_ids','=',[])]}"-->
                            <field name="pdvs_xml_file_name" invisible="1"/>
                            <field name="pdvs_xml_file" filename="pdvs_xml_file_name"
                                    class="oe_right"/>
                            <field name="pdvs_line_ids" nolabel="1"/>
                        </page>
                        <page string="ZP" ><!--attrs="{'invisible':[('pdvzp_line_ids','=',[])]}"-->
                            <field name="pdvzp_xml_file_name" invisible="1"/>
                            <field name="pdvzp_xml_file" filename="pdvzp_xml_file_name"
                                    class="oe_right"/>
                            <field name="pdvzp_line_ids" nolabel="1"/>
                        </page>
                        <page string="PPO">
                            <field name="pdvppo_line_ids"/>
                        </page>
                        <page string="Admin" groups="base.group_no_one">
                            <group>
                                <field name="pdv_template_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_l10n_hr_vat" model="ir.actions.act_window">
        <field name="name">PDV obrasci</field>
        <field name="res_model">l10n.hr.pdv.obrazac</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>
    <menuitem id="menu_l10n_hr_vat"
              parent="l10n_hr_account_oca.menu_l10n_hr_reports"
              groups="account.group_account_manager"
              action="action_l10n_hr_vat"/>

    
</odoo>
