<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="invoice_form_ubl_type" model="ir.ui.view">
    <field name="name">invoice_form_ubl_type</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_form"/>
    <field name="arch" type="xml">
        <notebook position="inside">
            <page string="UBL-e-Invoice">
                <group colspan="4" col="4">
                    <field name="ubl_buyer_ref"/>
                    <field name="ubl_order_ref"/>
                    <field name="ubl_business_process"/>
                    <field name="ubl_document_type"/>
                    <field name="ubl_schema"/>
                    <field name="ubl_file" readonly="1"/>
                </group>
                <notebook>
                    <page string="Attachments">
                        <field name="id" invisible="1"/>
                        <div>Preporuka FINE je ne koristiti pdf prilog kao vizualizaciju računa!</div>
                        <div>Mogu se pridružiti postojeći dokumenti iz sustava, ili učitati novi prilozi</div>
                        <div>Dozvoljeni formati priloga prema specifikaciji su: PDF, JPG, PNG, CSV, TXT, XLSX, ODS</div>
                        <field name="ubl_attachment_ids"
                               context="{
                                  'default_res_id': id,
                                  'default_res_model': 'account.invoice',
                                  'default_name': 'UBL Prilog uz eračun ',
                                  'default_partner_id': partner_id,
                               }"
                               domain="[('partner_id','=', partner_id)]"
                        />
                    </page>
<!--                    <page string="References">-->
<!--                        <group col="4" colspan="4">-->
<!--                            -->
<!--&lt;!&ndash;                            <field name="ubl_billing_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_despatch_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_receipt_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_statement_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_originator_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_contract_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_additional_ref"/>&ndash;&gt;-->
<!--&lt;!&ndash;                            <field name="ubl_project_ref"/>&ndash;&gt;-->
<!--                        </group>-->
<!--                    </page>-->
                </notebook>
            </page>
        </notebook>
    </field>
</record>

</odoo>
