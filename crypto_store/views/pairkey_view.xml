<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crypto_pairkey_tree" model="ir.ui.view">
		<field name="name">crypto.pairkey.tree</field>
		<field name="model">crypto.pairkey</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Pair key">
				<field name="name"/>
				<field name="user_id"/>
				<field name="group_id"/>
				<field name="state"/>
			</tree>
		</field>
	</record>
    <record id="view_crypto_pairkey_form" model="ir.ui.view">
        <field name="name">crypto.pairkey.tree</field>
        <field name="model">crypto.pairkey</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Pair key">
				<header>
					<button name="%(action_crypto_generate_pairkey_wizard)s"
							type="action" states="draft" string="Generate keys" />
					<button name="action_validate" type="object"
							states="draft" string="Approve"/>
					<button name="action_cancel"   type="object"
							states="draft,confirmed" string="Cancel"/>
					<field name="state" widget="statusbar"/>
				</header>
				<sheet>
					<group>
						<field name="name"/>
						<field name="user_id"/>
						<field name="group_id"/>
						<newline/>
						<field name="pub" domain="[('user_id','=',user_id)]"/>
						<field name="key"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="action_crypto_pairkey_tree" model="ir.actions.act_window">
            <field name="name">Pairkeys</field>
            <field name="res_model">crypto.pairkey</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_crypto_pairkey_tree"/>
        </record>
	<menuitem action="action_crypto_pairkey_tree"
			  id="menu_action_crypto_pairkey_tree"
			  parent="menu_crypto"/>
</odoo>
