<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mis_report_pd_report_wizard_form_view" model="ir.ui.view">
        <field name="name">mis_report_pd_report_wizard_form_view</field>
        <field name="model">mis.report.pd.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group attrs="{'invisible': [('out_xlsx', '!=', False)]}">
                        <field name="mis_report_id" domain="[('l10n_hr_report_type', '=', 'pd')]"
                               options="{'no_open': True, 'no_create_edit': True}"/>
                    </group>
                    <field name="name" invisible="1"/>
                    <div attrs="{'invisible': [('out_xlsx', '=', False)]}">
                        <h2>PD Report export completed</h2>
                        <p>Here is the file: <field name="out_xlsx" readonly="1" filename="name"/></p>
                    </div>
                </sheet>
                <footer>
                    <button type="object" name="create_report" string="Create Excel Report" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mis_report_pd_report_wizard_view_action">
        <field name="name">PD Report</field>
        <field name="view_id" ref="mis_report_pd_report_wizard_form_view"/>
        <field name="res_model">mis.report.pd.report.wizard</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="mis_report_pd_report_wizard_menu"
            parent="mis_builder.mis_report_finance_menu"
            name="PD Report"
            action="mis_report_pd_report_wizard_view_action"
            sequence="30"
    />

</odoo>